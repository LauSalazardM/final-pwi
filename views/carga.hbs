<div class="container h-80">

    <div class="text-center m-4">
        <hr>
        <h1>Carga de {{titulo}}</h1>
        <hr>
    </div>
    <div class="container-fluid w-{{width}}">
        {{#if carga}}
            <div class="row row-cols-3 text-center">
                <div class="col p-3">
                    <a href="/cpu" class="row btn btn-outline-secondary justify-content-center"><i class="bi bi-pc m-1" style="font-size: 3rem;"></i></a>
                    <label class="row form-label justify-content-center mt-1">CPU</label>
                </div>
                <div class="col p-3">
                    <a href="/notebook" class="row btn btn-outline-secondary justify-content-center"><i class="bi bi-laptop m-1" style="font-size: 3rem;"></i></a>
                    <label class="row form-label justify-content-center mt-1">Notebook</label>
                </div>
                <div class="col p-3">
                    <a href="/monitor" class="row btn btn-outline-secondary justify-content-center"><i class="bi bi-display m-1" style="font-size: 3rem;"></i></a>
                    <label class="row form-label justify-content-center mt-1">Monitor</label>
                </div>
            </div>
        {{/if}}

        {{#if cpu}}
            {{> c_cpu}}
        {{/if}}

        {{#if ntb}}
            {{> c_ntb}}
        {{/if}}

        {{#if disp}}
            {{> c_disp}}
        {{/if}}

        <div class="text-center validacion">
            <h2 class="text-danger">
                {{validacion}}
            </h2>
        </div>
    </div>
</div>
